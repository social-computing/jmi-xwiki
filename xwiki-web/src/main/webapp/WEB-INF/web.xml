<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app id="xwiki-web">
	<display-name>Just Map It! Xwiki</display-name>

	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>com.socialcomputing.xwiki.utils.HibernateSessionRequestFilter</filter-class>
	</filter>
    <filter>
        <filter-name>LogContextResetFilter</filter-name>
        <filter-class>com.socialcomputing.xwiki.web.filters.LogContextResetFilter</filter-class>
    </filter>

	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    <filter-mapping>
        <filter-name>LogContextResetFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>

	<servlet>
		<servlet-name>Jersey</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Jersey</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>

	<resource-ref>
		<res-ref-name>jdbc/xwiki-db</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
