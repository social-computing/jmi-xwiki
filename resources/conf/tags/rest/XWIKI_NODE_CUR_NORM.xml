<?xml version='1.0' encoding='ISO-8859-1'?>

<!DOCTYPE swatch SYSTEM "swatch.dtd">

<swatch name="XWIKI_NODE_CUR_NORM">

        <!-- Base -->
	<sat shape="diskShp"
					transfo="baseTrf"
					hover="hoverEvt"
					click="clickEvt"
					dblClk="dblClkEvt" 
					isSub="true"
					isCur="true"
					isVisible="true" 
					isSuper="true" 
					isRest="true" 
					isBack="false" 
					isTip="false" 
					isNoSided="false">
		<slice		inCol="164 164 164"
					outCol="100 100 100"
					alpha="1"
					linewidth="1"/>
		<slice		inCol="255 255 255"
					alpha="1"
					linewidth="1">
			<transfo scale=".87" map="absolute"/>
		</slice>
	</sat>

        <!-- Rest Spots -->
	<sat	        shape="diskShp"
					isSub="true"
					isVisible="true" 
					isSuper="true" 
					isCur="false" 
					isRest="true" 
					isBack="false" 
					isTip="false" 
					isNoSided="false">
		<slice		inCol="100 100 100"
					outCol="0 0 0"
					transfo="spotTrf"
					alpha="1"
					linewidth="1"/>
	</sat>

        <!-- Cur Spot -->
	<sat	        shape="diskShp"
					isSub="true"
					isRest="false"
					isCur="true"
					isVisible="true" 
					isSuper="true" 
					isBack="false" 
					isTip="false" 
					isNoSided="false">
		<slice		inCol="164 164 164"
					outCol="100 100 100"
					transfo="spotTrf"
					alpha="1"
					linewidth="1"/>
	</sat>

        <!-- Rest Titles -->
	<sat	        shape="voidShp"
					click="clickEvt"
					dblClk="dblClkEvt"
					isSub="true"
					isTip="true"
					isVisible="true" 
					isSuper="true" 
					isCur="false" 
					isRest="true" 
					isBack="false" 
					isNoSided="false">
		<transfo    map="interpol">
			<polar  dir="0" rad="1.3"/>
		</transfo>
		<slice alpha="1" linewidth="1">
			<tip 	font="nameFnt"
					label="@nameStr"
					textCol="@blackCol"
					isCorner="true"
					blur="-1" 
					rounded="-1" 
					dir="SW" 
					align="left" 
					isFloating="false"/>
		</slice>
	</sat>

        <!-- General purpose Selection -->
        <!-- Sel sats must be declared before the ones they should hides when they'll be activated -->
	<sat	        shape="voidShp"
					isSub="true"
					selection="search"
					isVisible="true" 
					isSuper="true" 
					isCur="false" 
					isRest="true" 
					isBack="false" 
					isTip="false" 
					isNoSided="false">
		<transfo    map="interpol">
			<polar  dir="0" rad="1.2"/>
		</transfo>
		<slice alpha="1" linewidth="1">
			<tip 	font="selFnt"
					label="{sNAME}"
					inCol="255 0 0"
					textCol="@whiteCol"
					isCorner="true"
					blur="-1" 
					rounded="-1" 
					dir="SW" 
					align="left" 
					isFloating="false"/>
		</slice>
	</sat>

        <!-- Cur Title -->
	<sat	        shape="voidShp"
					click="clickEvt"
					dblClk="dblClkEvt"
					isSub="true"
					isRest="false"
					isCur="true"
					isVisible="true" 
					isSuper="true" 
					isBack="false" 
					isTip="false" 
					isNoSided="false">
		<transfo    map="interpol" scale="0">
			<polar  dir="0" rad="1.2"/>
		</transfo>
		<slice alpha="1" linewidth="1">
			<tip 	font="nameFnt"
					label="{sNAME}"
					inCol="100 100 100"
					textCol="@whiteCol"
					isCorner="true"
					blur="-1" 
					dir="SW" 
					align="left" 
					isFloating="false"/>
		</slice>
	</sat>

        <!-- References -->
	<string         id="nameStr"        label="{sNAME}"/>

	<color 		    id="blackCol"		rgb="000000"/>
	<color 		    id="whiteCol"		rgb="ffffff"/>
	<color 		    id="hLinkDrkCol"	rgb="0 0 127"/>
	<color 		    id="hLinkCol"		rgb="0 0 255"/>
	<color 		    id="hLinkLitCol"	rgb="191 191 255"/>

	<shape		    id="voidShp" scale="0" anchor="center"/>
	<shape		    id="diskShp" scale="1" anchor="center">
	</shape>
	<shape		    id="spotShp" scale="0.2" anchor="center">
	</shape>

	<font		    id="nameFnt"
					name="SansSerif"
					size="12"
					style="bold"/>
	<font		    id="italicFnt"
					name="SansSerif"
					size="12"
					style="italic"/>
	<font		    id="selFnt"
					name="SansSerif"
					size="12"
					style="bold" />

	<transfo        id="spotTrf"
					scale="0.2"
					map="absolute" />
	<transfo        id="imgTrf"
					scale="0.4"
					map="absolute"/>
	<transfo	    id="baseTrf"
					map="interpol"
					scale="0">
		<polar      dir="90"
					rad="1"/>
	</transfo>
	<transfo        id="selTrf"
					map="interpol"
					scale="0">
		<polar      dir="0"
					rad="1.4"/>
	</transfo>

	<tip 	    id="textTip"
				font="nameFnt"
				label="@nameStr"
				textCol="@blackCol"
				isCorner="true"
				blur="-1" 
				rounded="-1" 
				dir="SW" 
				align="left" 
				isFloating="false"/>

	<!-- Hover event -->
	<event 	        id="hoverEvt">
		<show       status="Cliquez pour afficher le menu de '{sNAME}'. Double-cliquez pour afficher sa fiche."/>
		<!--pop        tooltip="tooltip"/-->
	</event>


	<!-- Click event -->
	<event id="clickEvt">
            <popup menu="menu"/>
	</event>
	
        <menu id="menu" font="menuFnt">
            <item label="Afficher" font="nameFnt" url="javascript:DisplayTag({sID},{sNAME})" />
	    <item label="Centrer" font="nameFnt" url="javascript:Discover({sID},{sNAME})" />
            <separator />
            <menu id="submenu" label="[+30sPOSS_NAME]" font="menuFnt">
                <item label="Afficher la page" url="_self:[sPOSS_URL]" />
                <item label="Afficher sur la carte" url="javascript:NewWin([sPOSS_ID],[sPOSS_NAME])" />
            </menu>
        </menu>
        <font id="menuFnt" name="Monospaced" size="11" style="plain" />

	<!-- DblClkEvt event -->
	<event id="dblClkEvt">
            <open url="javascript:DisplayTag({sID},{sNAME})" />
	</event>
</swatch>
