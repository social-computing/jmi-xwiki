<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.social-computing.com/xwiki" 
  xmlns:sc="http://www.social-computing.com/xwiki"
  elementFormDefault="qualified">

  <complexType name="Page">
    <sequence>
      <element name="name" minOccurs="1" maxOccurs="1" type="string"/>
      <element name="title" minOccurs="1" maxOccurs="1" type="string"/>
      <element name="url" minOccurs="1" maxOccurs="1" type="string"/>
    </sequence>
  </complexType>
  
  <complexType name="Tag">
    <sequence>
      <element name="name" minOccurs="1" maxOccurs="1" type="string"/>
      <element name="page" minOccurs="0" maxOccurs="unbounded" type="sc:Page"/>
    </sequence>
  </complexType>
  
  <element name="tags">
    <complexType>
      <sequence>
        <element name="tag" minOccurs="0" maxOccurs="unbounded" type="sc:Tag"></element>
      </sequence>
    </complexType>
  </element>
</schema>